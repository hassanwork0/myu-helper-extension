{
  "manifest_version": 3,
  "name": "MYU Helper",
  "version": "1.0",
  "description": "Format Table for Ramadan Script for myu.hti-o.edu.eg",

  "icons": {
    "32": "icons/myu-icon96-rb.png",
    "48": "icons/myu-icon96-rb.png",
    "96": "icons/myu-icon96-rb.png",
    "128": "icons/myu-icon96-rb.png"
  },

  "action": {
    "default_title": "MYU Helper",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://myu.hti-o.edu.eg/*"],
      "js": ["script.js"]
    }
  ]
}
